{
  "name": "iota-css-theme",
  "version": "1.0.0",
  "description": "IOTA CSS Theme",
  "main": "dist/main.css",
  "scripts": {
    "serve": "http-server -p 3000 ./dist",
    "build": "kss --config kss-config.json && node-sass ./main.scss ./dist/main.css && copyfiles script.js assets/*.* dist",
    "build-serve": "run-s build serve"
  },
  "author": "IOTA Foundation",
  "license": "Apache-2.0",
  "devDependencies": {
    "copyfiles": "^2.1.0",
    "http-server": "^0.11.1",
    "kss": "^3.0.0-beta.23",
    "michelangelo": "^0.8.0",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "normalize.css": "^8.0.1"
  }
}
